<body>
  <header>
    <h1>MEME GENERATOR</h1>
  </header>

  <section class="image-select">
    <span class="step">1</span>
<!--     <p>Enter the keyword to search for images</p>
 -->    <input id="search-term" type="text" placeholder="Search for an image. ">
    <button id="go-search">Go!</button>
  </section>
  <section>
    <div id="search-results"></div>
    <div id="branding"></div>
  </section>
<section class="copy">
    <span class="step">2</span>
    <input id="text" type="text" placeholder="Put your meme text in here" >
</section>

<section id="style-image">
       <span class="step" style="float: left; left: 110px;">3</span>  
    <div id="workspace">
        <p id="caption"></p>
    </div>
</section>
<section>
    <div id="controls">
      Left: <input type="number" id="left" value="10">
      Top: <input type="number" id="top" value="10">
      Width: <input type="number" id="width" value="275">
      Size: <input type="number" id="size" value="10">
      Colour: <div class="styled-select">
                    <select id="colour">
                      <option value="#fff">White</option>
                      <option>Red</option>
                      <option>Green</option>
                      <option>Black</option>
                      <option>Blue</option>
                      <option>Yellow</option>
                      <option>Grey</option>
                      <option>Orange</option>
                  </select>
                  </div>
      Align: <div class="styled-select">
                  <select id="alignment">
                    <option>Center</option>
                    <option>Left</option>
                    <option>Right</option>
                  </select>
              </div>
    </div>
</section>

